{
  "name": "pico-tester",
  "version": "4.0.0",
  "description": "A test framework for Javascript",
  "bin": "./lib/pt-require.js",
  "scripts": {
    "test": "node -r esm lib/pt.js `find ./lib -iname *.spec.js` --reporter=minimal",
    "releasable": "todo-stitcher",
    "preversion": "npm run releasable && npm test",
    "release": "npm version major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wolframkriesing/pico-tester.git"
  },
  "keywords": [
    "pt",
    "pico-tester",
    "kavun",
    "javascript",
    "js",
    "node",
    "test",
    "unit test",
    "spec runner",
    "test runner",
    "mocha",
    "ava",
    "jasmine",
    "jest"
  ],
  "author": "Ugurcan Sengit <ugurcansengit@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wolframkriesing/pico-tester/issues"
  },
  "homepage": "https://github.com/wolframkriesing/pico-tester#readme",
  "devDependencies": {
    "todo-stitcher": "git+https://git@github.com/wolframkriesing/todo-stitcher.git"
  },
  "main": "lib/index.js",
  "directories": {
    "example": "example",
    "lib": "lib",
    "test": "tests"
  },
  "dependencies": {
    "esm": "^3.2.25",
    "minimist": "^1.2.5"
  }
}
